<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.devapps.igor.Screens.MainActivity">


    <ImageView
        android:id="@+id/create_adventure_btn_create"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_gravity="right"
        app:srcCompat="@drawable/btn_close_edit_mode"/>

    <ImageView
        android:id="@+id/create_adventure_btn_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/btn_close"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="43dp"
            android:paddingBottom="15dp"
            android:text="@string/criar_aventura_title"
            android:textColor="@color/CreationLabelBlue"/>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:text="@string/create_adventure_hint"
            android:textColor="@color/CreationLabelGray"/>

        <EditText
            android:id="@+id/create_adventure_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="43dp"
            android:background="@android:color/transparent"
            android:hint="@string/create_adventure_hint"
            android:textColor="@color/CreationLabelBlack"/>

        <ImageView
            android:id="@+id/criar_adventure_botao_pronto"
            android:layout_width="118dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/create_adventure_editText"
            android:layout_gravity="right"
            android:layout_marginRight="43dp"
            android:layout_marginTop="26dp"
            app:srcCompat="@drawable/btn_ready"/>


    </LinearLayout>
</FrameLayout>

