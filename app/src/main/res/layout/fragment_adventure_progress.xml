<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#1e2843"
             tools:context="com.devapps.igor.Screens.AdventureProgress.AdventureProgressFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/bg_adventure_title"/>

        <TextView
            android:id="@+id/adventure_progress_adventure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="Aventura sem tÃ­tulo"
            android:textColor="@color/gray_btn_bg_color"
            android:textSize="24dp"/>
    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:background="@drawable/bg_adventure_progress">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="10dp"
                android:text="Andamento"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="10dp"
                android:text="Jogadores"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adventure_progress_adventure_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="65dp"
                android:text="Aventura Sem Resumo"/>

            <ImageView
                android:id="@+id/adventure_progress_btn_see_more"
                android:layout_width="106dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/btn_see_more"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/line"/>

            <ListView
                android:id="@+id/adventure_progress_sessions_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:divider="@null">
            </ListView>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/adventure_progress_btn_add_session"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:layout_gravity="bottom|right"
        app:srcCompat="@drawable/btn_add_session"/>


</FrameLayout>
